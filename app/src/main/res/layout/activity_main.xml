<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#abc"
    android:weightSum="1">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Verse Goes here"
       android:textSize="@dimen/verse_font_main"
       android:background="#fcd"
       android:layout_gravity="center"
       android:id="@+id/verse"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getChapter"
        android:layout_gravity="center"
        android:text="Read Chapter"
        android:onClick="GetChapter"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getQuran"
        android:layout_gravity="center"
        android:text="Read Quran"
        android:onClick="GetQuran"
        />

</LinearLayout>
